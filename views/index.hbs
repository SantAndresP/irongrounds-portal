<!-- HOME PAGE. -->

<!-- Custom styles for `index.hbs`. -->
<link href="/stylesheets/index.css" rel="stylesheet">

<!-- Main body. -->
<main>

  <div class="container-fluid d-flex ">

    <div class="container">
      <h2>Top Liked</h2>
      <div class="row mb-2 no-gesture">
        <div class="col-md-11">
          {{!-- Card Start--}}
          {{#each sortedByLikes}}
          <div class="card flex-md-column mb-4 box-shadow h-md-250">
            <div class="d-flex align-items-center index-right-card">
              <img class="card-img-right flex-auto d-none d-md-block" src="{{this.image}}" alt="Card image cap"
                style="max-width: 50px; max-height:50px; border-radius: 50%; self-align:center; margin-left:20px;">
              <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                  <a class="text-dark" href="/games/{{this._id}}">{{this.title}}</a>
                </h3>
                <div class="mb-1 text-muted">{{this.author}}<span class="mb-1 text-muted"> | Likes: {{this.likes.length}}</span></div>
                
                <p class="card-text mb-auto">{{this.about}}</p>
                
              </div>
            </div>
          </div>
          {{/each}}
          {{!-- Card End --}}


        </div>

      </div>
    </div>


    <div class="container-fluid" id='container-right'>

      <h2>Featured Game</h2>
      <!-- Featured game. -->
      <div class="row">
        <div class="col-12 col-sm-12">

          <div class="card bg-dark text-white ">
            <img class="card-img" src="{{gamesList.0.image}}" alt="Card image">
            <div class="card-img-overlay">
              <h5 class="card-title">{{gamesList.0.title}}</h5>
              <p class="card-text">{{gamesList.0.about}}</p>
              <p class="card-text">{{dateFormat gamesList.0.createdAt "MMMM Do, YYYY"}}</p>
            </div>
          </div>

        </div>
      </div>

      <!-- Selected games. -->
      <h2></h2>
      <div class="row">
        <div class="col-12 ">
          <div class="d-flex justify-content-between flex-wrap mt-3 mb-3">

            <div class="card text-white bg-warning mt-2 mb-3" style="max-width: 250px;">
              <img class="card-img-top" src="{{gamesList.0.image}}" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">{{gamesList.0.title}}</h5>
                <p class="card-text">{{gamesList.0.about}}</p>
              </div>
              <div class="card-footer">
                <small class="text-white">{{dateFormat gamesList.0.createdAt "MMMM Do, YYYY"}}</small>
              </div>
            </div>

            <div class="card text-white bg-warning mt-2 mb-3" style="max-width: 250px;">
              <img class="card-img-top" src="{{gamesList.0.image}}" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">{{gamesList.0.title}}</h5>
                <p class="card-text">{{gamesList.0.about}} Lorem ipsum, dolor sit amet consectetur adipisicing elit.
                  Voluptate nemo ab molestias natus impedit mollitia rerum explicabo. Soluta, maxime voluptatum
                  repellendus tempore eum natus voluptatem suscipit magnam totam facere quaerat.</p>
              </div>
              <div class="card-footer">
                <small class="text-white">{{dateFormat gamesList.0.createdAt "MMMM Do, YYYY"}}</small>
              </div>
            </div>

            <div class="card text-white bg-warning mt-2 mb-3" style="max-width: 250px;">
              <img class="card-img-top" src="{{gamesList.0.image}}" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">{{gamesList.0.title}}</h5>
                <p class="card-text">{{gamesList.0.about}}</p>
              </div>
              <div class="card-footer">
                <small class="text-white">{{dateFormat gamesList.0.createdAt "MMMM Do, YYYY"}}</small>
              </div>
            </div>

            <div class="card text-white bg-warning mt-2 mb-3" style="max-width: 250px;">
              <img class="card-img-top" src="{{gamesList.0.image}}" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">{{gamesList.0.title}}</h5>
                <p class="card-text">{{gamesList.0.about}} </p>
              </div>
              <div class="card-footer">
                <small class="text-white">{{dateFormat gamesList.0.createdAt "MMMM Do, YYYY"}}</small>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>


</main>