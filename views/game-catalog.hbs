<!-- Custom styles for `game-catalog.hbs`. -->
<link href="/stylesheets/games-catalog.css" rel="stylesheet">

<!-- Main. -->
<main role="main">

  <div class="album py-5">
    <div class="container">

      <div class="row">

        {{#each games}}
        <a href="/games/{{this._id}}" id="game-catalog-link">
          <div class="col-md-4">
            <div class="card mb-4 box-shadow myGameCard" style="max-width: 275px; min-height: 350px;">
              <img class="card-img-top" src="{{this.image}}" alt="Card image cap"
                style="max-width: 180px max-height: 180px;">
              <div class="card-body">
                <p class="card-text">
                  <b>{{this.title}}</b>
                  <br>{{this.about}}
                </p>

                <div class="d-flex justify-content-center align-items-center">
                  <div class="btn-game-card">
                    <a type="button" href="/games/{{this._id}}" class="btn btn-sm btn-outline-danger">Play</a>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</main>