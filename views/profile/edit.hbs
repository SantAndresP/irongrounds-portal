<!-- Profile edit form. -->
<link href="/stylesheets/form.css" rel="stylesheet">

<!-- Main. -->
<div class="container">

  <div class="py-5 text-center">
    <h2>Edit your profile</h2>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8 order-md-1">
      <form class="needs-validation form-btn" method="POST" action="/profile/edit" id="form-edit">

        <div class="mb-3">
          <label for="image">Profile image</label>
          <div class="input-group">
            <input name="image" type="text" class="form-control" id="image" value="{{user.image}}">
          </div>
        </div>

        <div class="mb-3">
          <label for="about">About </label>
          <input name="about" type="text" class="form-control" id="about" value="{{user.about}}">
        </div>

        <hr class="mb-4">
        <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#myModal">
          Save changes
        </button>

        <!-- Modal Setting -->
        <div class="modal" id="myModal">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Please confirm.</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <!-- Modal body -->
              <div class="modal-body">
                Are you sure you want to save the changes?
              </div>
              <!-- Modal footer -->
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="form-btn" data-dismiss="modal">Confirm</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

      </form>

      {{#if message}}
        <div class="alert alert-danger mt-3" role="alert">
          <h4 class="alert-heading">Error</h4>
          <p>{{message}}</p>
        </div>
      {{/if}}
    </div>
  </div>

</div>