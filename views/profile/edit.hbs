<form method="POST" action="/profile/edit">
  <h2>Edit your profile</h2>

  <div class="form-group">
    <label for="profile-img">Profile image</label>
    <input name="image" type="text" class="form-control" id="propellers">
  </div>

  <div class="form-group">
    <label for="maxSpeed">About</label>
    <input name="about" type="text" class="form-control" id="maxSpeed" placeholder="Something about yourself">
  </div>

  <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>


<div class="form__container">
  <div class="form__containerChild">
    <form class="ui form " method="POST" action="/games/{{game._id}}/edit"
      onsubmit="return confirm('Are you sure you want to save the changes?');">
      <h2>Edit your game</h2>

      <div class="field">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{game.title}}">
      </div>

      <div class="field">
        <label for="about">About</label>
        <input name="about" type="text" class="form-control" id="about" value="{{game.about}}">
      </div>
      <div class="two fields">
        <div class="field">
          <label for="link">Game link</label>
          <input name="link" type="text" class="form-control" id="link" value="{{game.link}}">
        </div>

        <div class="field">
          <label for="image">Thumbnail</label>
          <input name="image" type="text" class="form-control" id="image" value="{{game.image}}">
        </div>
      </div>

      <div class="two fields">
        <div class="field">
          <label for="width">Width</label>
          <input name="width" type="text" class="form-control" id="width" value="{{game.width}}">
        </div>

        <div class="field">
          <label for="height">Height</label>
          <input name="height" type="text" class="form-control" id="height" value="{{game.height}}">
        </div>
      </div>
      <button type="submit" class="ui fluid large teal  button">Save changes</button>
    </form>

    <div class="form__button">
      <form method="POST" action="/games/{{game._id}}/delete"
        onsubmit="return confirm('Are you sure you want to delete this game?');">
        <button type="submit" class="ui fluid large red submit button">Delete</button>
    </div>
  </div>
</div>