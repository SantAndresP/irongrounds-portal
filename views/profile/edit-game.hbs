<!-- Profile edit form. -->
<link href="/stylesheets/form.css" rel="stylesheet">

<!-- Game edit form. -->
<div class="container">

  <div class="py-5 text-center">
    <h2>Edit your game</h2>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8 order-md-1">
      <form class="needs-validation form-btn" method="POST" action="/games/{{game._id}}/edit" id="form-edit"
        enctype="multipart/form-data">

        <div class="mb-3">
          <label for="title">Title</label>
          <div class="input-group">
            <input name="title" type="text" class="form-control" id="title" value="{{game.title}}" required>
          </div>
        </div>

        <div class="mb-3">
          <label for="about">About</label>
          <input name="about" type="text" class="form-control" id="about" value="{{game.about}}" required>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-6 mb-3">
            <label for="link">Game link</label>
            <input name="link" type="text" class="form-control" id="link" value="{{game.link}}" required>
          </div>

          <div class="col-md-6 mb-3">
            <label for="image">Thumbnail</label>
            <input name="image" type="file" class="form-control" id="image" value="{{game.image}}" required>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-6 mb-3">
            <label for="width">Width</label>
            <input name="width" type="text" class="form-control" id="width" value="{{game.width}}" required>
          </div>

          <div class="col-md-6 mb-3">
            <label for="height">Height</label>
            <input name="height" type="text" class="form-control" id="height" value="{{game.height}}" required>
          </div>
        </div>

        <hr class="mb-4">
        <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#myModal">
          Save changes
        </button>

        <!-- Modal Setting -->
        <div class="modal" id="myModal">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Please confirm.</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <!-- Modal body -->
              <div class="modal-body">
                Are you sure you want to save the changes?
              </div>
              <!-- Modal footer -->
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="form-btn" data-dismiss="modal">Confirm</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </form>

      <div class="mt-3">
        <form method="POST" action="/games/{{game._id}}/delete" id="form-delete">
          <button type="button" class="btn btn-danger btn-lg btn-block" data-toggle="modal" data-target="#myModalDel">
            Delete
          </button>
          <div class="modal" id="myModalDel">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">Please confirm.</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                  Are you sure you want to delete the game?
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary" id="form-btn-delete"
                    data-dismiss="modal">Confirm</button>
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </form>

      </div>

      {{#if message}}
      <div class="alert alert-danger mt-3" role="alert">
        <h4 class="alert-heading">Error</h4>
        <p>{{message}}</p>
      </div>
      {{/if}}
    </div>

  </div>
</div>