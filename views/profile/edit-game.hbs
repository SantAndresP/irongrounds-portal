<!-- Bootstrap CSS. -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
  integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<!-- Game upload form. -->
<form method="POST" action="/games/{{game._id}}/edit">
  <h2>Edit your game</h2>

  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" value="{{game.title}}">
  </div>

  <div class="form-group">
    <label for="about">About</label>
    <input name="about" type="text" class="form-control" id="about" value="{{game.about}}">
  </div>

  <div class="form-group">
    <label for="link">Game link</label>
    <input name="link" type="text" class="form-control" id="link" value="{{game.link}}">
  </div>

  <div class="form-group">
    <label for="image">Thumbnail</label>
    <input name="image" type="text" class="form-control" id="image" value="{{game.image}}">
  </div>

  <div class="form-group">
    <label for="width">Width</label>
    <input name="width" type="text" class="form-control" id="width" value="{{game.width}}">
  </div>

  <div class="form-group">
    <label for="height">Height</label>
    <input name="height" type="text" class="form-control" id="height" value="{{game.height}}">
  </div>

  <button type="submit" class="btn btn-outline-primary">Save changes</button>
</form>