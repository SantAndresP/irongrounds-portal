<!-- Bootstrap CSS. -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
  integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<!-- Game upload form. -->
<form method="POST" action="/profile/upload">
  <h2>Upload a game</h2>

  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title">
  </div>

  <div class="form-group">
    <label for="about">About</label>
    <input name="about" type="text" class="form-control" id="about" placeholder="Short description about the game">
  </div>

  <div class="form-group">
    <label for="link">Game link</label>
    <input name="link" type="text" class="form-control" id="link" placeholder="Deployment link here">
  </div>

  <div class="form-group">
    <label for="image">Thumbnail</label>
    <input name="image" type="text" class="form-control" id="image" placeholder="Thumbnail for the game">
  </div>

  <div class="form-group">
    <label for="width">Width</label>
    <input name="width" type="text" class="form-control" id="width" placeholder="100%">
  </div>

  <div class="form-group">
    <label for="height">Height</label>
    <input name="height" type="text" class="form-control" id="height" placeholder="Game height">
  </div>

  <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>