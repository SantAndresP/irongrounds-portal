<!-- Sign up form. -->
<div class="auth__container">
  <div class="auth__containerChild">
    <h2 class="auth__header">Sign up</h2>

    <form class="ui large form" action="/signup" method="POST">

      <div class="field" id="auth__field">
        <label>Username</label>
        <div class="ui left icon input">
          <i class="user icon"></i>
          <input type="text" name="username" placeholder="Username">
        </div>
      </div>

      <div class="field">
        <label>Password</label>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <input type="password" name="password" placeholder="Password">
        </div>
      </div>

      <button class="ui fluid large orange submit button" type="submit">Sign Up</button>
      {{#if error}}
      <div class="ui negative message">
        <i class="close icon"></i>
        <div class="header">
          Login failed.
        </div>
        <ul class="list">
          <li>{{error}} ðŸ’£</li>
        </ul>
      </div>
      {{/if }}
    </form>
  </div>

</div>